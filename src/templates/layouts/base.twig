<!DOCTYPE html>
<html>
  <head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-81197887-3"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-81197887-3');
    </script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page.title }}</title>
    <meta name="description" content="{{ page.description | e('html_attr') }}">
    {% block meta %}{% endblock %}

    {% block styles %}
    <link rel="stylesheet" type="text/css" href="{{ puppy.assetUrl('main.css') }}">
    {% endblock %}
    <link rel="stylesheet" href="https://use.typekit.net/qok2ltt.css">
    <script src="https://kit.fontawesome.com/f425bd4514.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>
  <body>
    <header class="menu">
      {% include '@templates/partials/menu.twig' %}
    </header>

    <main class="site-content">
      {% block content %}{% endblock %}
    </main>

    <footer>
      {% include '@templates/partials/footer.twig' %}
    </footer>

    {% block scripts %}
    <script type="text/javascript" src="{{ puppy.assetUrl('vendor.js') }}"></script>
    <script type="text/javascript" src="{{ puppy.assetUrl('main.js') }}"></script>
    {% endblock %}
  </body>
</html>
